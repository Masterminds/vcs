{
	"name": "VCS Development Container",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"settings": {
				"go.toolsManagement.checkForUpdates": "local",
				"go.useLanguageServer": true,
				"go.gopath": "/go"
			},
			"extensions": [
				"golang.go"
			]
		}
	},
	"postCreateCommand": "go mod download",
	"remoteUser": "vscode"
}
